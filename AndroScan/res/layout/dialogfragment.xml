<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0px"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlayoutID"
        android:layout_width="300dp"
        android:layout_height="170dp" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/resultImage"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="37.5dp"
            android:contentDescription="category icon" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true" 
            android:orientation="vertical">
            
			  <!-- Product Name textviews -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blue"
                android:text="@string/product_name"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="30dp"
                android:text="@string/empty_product"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <!-- Product Price textviews -->
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blue"
                android:text="@string/product_price"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="30dp"
                android:text="@string/empty_product"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <!-- Product Currency textviews -->
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blue"
                android:text="@string/product_currency"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tvProductCurrency"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="30dp"
                android:text="@string/empty_product"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <!-- Product Currency textviews -->
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blue"
                android:text="@string/product_store_name"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tvProductStoreName"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="30dp"
                android:text="@string/empty_product"
                android:textSize="14sp"
                android:textStyle="bold" />
         
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/upBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_detail_fragment"
            android:enabled="true"
            android:text="@string/up_product" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/blue" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_detail_fragment"
            android:enabled="true"
            android:text="@string/save_product" />
    </LinearLayout>

</LinearLayout>